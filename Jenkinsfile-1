pipeline {
  agent { label 'jenkins-controller-agent' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sonarqube') { 
          sh './mvnw clean org.sonarsource.scanner.maven:sonar-maven-plugin:3.11.0.3922:sonar'
        }
      }
    }
  }
}
